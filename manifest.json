{
  "manifest_version": 3,
  "name": "GitHub Comment Copier",
  "description": "Copy GitHub comments in a formatted way for AI agents",
  "version": "1.1.0",
  "permissions": [
    "clipboardWrite",
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
